// Check if a given number exists in the array. Return its index if found, else return -1.
// Sample Input: arr = [4, 7, 1, 3], key = 3
// Sample Output: 3
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    vector<int> arr = {1, 7, 1, 3};
    int key = 3;

    auto it = find(arr.begin(), arr.end(), key);
    if (it != arr.end())
        cout << (it - arr.begin()) << endl;
    else
        cout << -1 << endl;

    return 0;
}
